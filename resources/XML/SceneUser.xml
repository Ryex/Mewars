<?xml version="1.0" encoding="UTF-8"?>
<interfaces>
    <!-- Login form interface -->
    <interface name="LoginForm">

        <!--
        <e name="MEWLoginWindow" component="MEWLoginWindow"> 
            <init><![CDATA[MEWLoginWindow]]></init>

        </e>
        -->

        <e name="MEWLoginFormInterface" component="MEWLoginForm" x="0" y="0" z="0">
            
            <init><![CDATA[MEWLoginForm]]></init>

            <!--<sizer type="verticle">-->
                <e name="GreetingText" component="DOM, Text" x="0" y="0" z="1">
                    <craftytext>
                        <value>Welcome Guest!</value>
                    </craftytext>
                </e>


                <e name="LoginInput" component="HTML_INPUT" x="10" y="10" z="1" >
                    <attr>
                        <minwidth>50</minwidth>
                        <minheight>20</minheight>
                        <z>1</z>
                    </attr>
                    <craftyhtml><![CDATA[ <input id="_MEW_login_username" type="text" class="input_text" value="Username or Email" /> ]]></craftyhtml>
                    <css><![CDATA[{"background": "rgb(196, 183, 135)"}]]></css>
                </e>

                <e name="PasswordInput" component="HTML_INPUT" x="20" y="20" z="1">
                    <attr>
                        <minwidth>50</minwidth>
                        <minheight>20</minheight>
                        <z>1</z>
                    </attr>
                    <craftyhtml><![CDATA[ <input id="_MEW_login_password" type="password" class="input_password" value="Password" /> ]]></craftyhtml>
                    <css><![CDATA[ {"background": "rgb(196, 183, 135)"} ]]></css>
                </e>
                
    

                <e name="LoginResult" component="HTML" x="30" y="30" z="1">
                    <attr>
                        <minwidth>50</minwidth>
                        <minheight>20</minheight>
                        <z>1</z>
                    </attr>
                    <craftyhtml><![CDATA[]]></craftyhtml>
                    <css><![CDATA[ {"background": "rgb(196, 183, 135)"} ]]></css>
                </e>
            <!--</sizer>-->

        </e>


    </interface>
</interfaces>